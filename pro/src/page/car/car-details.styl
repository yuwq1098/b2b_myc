@import '../../assets/css/mixin.styl'

.bg-test
    background #e2e2e2

.g-doc
    background #fff
    .g-bd
        padding-bottom 25px
        .m-mn-hd
            height 520px
            margin-top 15px
            .m-mn-info
                width 510px
                height 100%
                margin-right 25px
                .m-tit
                    max-height 56px
                    line-height 28px
                    font-size 20px
                    overflow hidden
                    margin-bottom 10px
                .m-pic
                    height 50px
                    line-height 50px
                    margin-bottom 10px
                    position relative
                    & >*
                        float left
                    .u-price
                        margin-right 25px
                        line-height 46px
                        .tit
                            _display(inline-block)
                            _translate3d(0,-1px)
                            margin-right 15px
                        .vital
                            color #ff6533
                            font-size 22px
                            font-weight bold
                    .u-del
                        font-size 13px
                        color #959595
                        text-decoration line-through
                    .u-lk
                        position absolute
                        right 0
                        top 0
                        &.record i
                            font-size 20px
                            margin-right 5px
                            color #fbad42

                .m-des
                    width 510px
                    height 180px
                    .m-des-lst
                        width 100%
                        height 100%
                        position relative
                        &::before
                            content ""
                            _display(block)
                            width 100%
                            height 1px
                            background #e2e2e2
                            position absolute
                            left 0
                            top 50%
                            z-index 99
                        .u-item
                            width 170px
                            height 90px
                            text-align center
                            position relative
                            float left
                            .u-tit
                                font-size 18px
                                line-height 32px
                                margin-top 18px
                            .u-des
                                font-size 12px
                                line-height 18px
                                color #959595
                            &:not(:nth-child(3n))::before
                                content ""
                                _display(block)
                                width 1px
                                height 54px
                                background #e2e2e2
                                position absolute
                                _verticalLayout(,-1px)
                                z-index 99
                .m-intro
                    width 100%
                    height 72px
                    margin 14px 0
                    background #e2e2e2
                .m-opra
                    width 100%
                    height 54px
                    position relative
                    .u-btn,.u-btn-a
                        float left
                        text-align center
                    .u-btn
                        width 150px
                        height 54px
                        line-height 54px
                        _borderRadius(6px)
                        margin-left 20px
                        font-size 20px
                        font-weight bold
                        _spacingPlus(4px)
                        color #FFF
                        background #ff6533
                        &.v2
                            background #fbad42
                    .u-btn-a
                        width 135px
                        height 48px
                        line-height 48px
                        margin-top 3px
                        _borderRadius(4px)
                        border 1px solid #e2e2e2
                        font-size 17px
                        color #545454
                        font-weight bold
                        _spacingPlus(1px)
                        .i-phone
                            _display(inline-block)
                            margin-right 25px
                            font-size 18px
                            height 18px
                            position relative
                            &:before
                                content ""
                                _display()
                                width 20px
                                height 25px
                                position absolute
                                left 0
                                background url("../../assets/img/i-tel-icon.png") 0 0 no-repeat
                                background-size 100% 100%
                .m-collect
                    margin-top 15px
                    height 32px
                    line-height 32px
                    .u-lk
                        margin-right 20px
                        &:hover
                            color #ff6533
                        .iconfont
                            font-size 18px
                            margin-right 4px
                            color #ff6533




        .m-car-info
            height 320px
            margin-top 15px
            .m-mn
                height 260px
                width 1100px
                position relative
                margin-left 50px
                _border(top,#e2e2e2)
                .m-basic
                    width 550px
                    .u-tit
                        margin-top 15px
                        height 72px
                        line-height 72px
                        text-align center
                        font-size 18px
                        font-weight bold
                        _spacingPlus(1px)
                    .u-con
                        .u-list
                            width 225px
                            margin 0 25px
                            .u-item
                                height 32px
                                line-height 32px
                                span
                                    _display(inline-block)
                                .u-attr
                                    width 90px

                .m-merchant
                    width 550px
                    .m-mct-box
                        width 400px
                        height 190px
                        margin 35px auto
                        .m-mct-hd
                            height 90px
                            width 305px
                            padding-left 90px
                            position relative
                            .u-icon
                                width 78px
                                height 78px
                                position absolute
                                top 0
                                left 0
                                background #e2e2e2
                                _borderRadius()
                                img 
                                    height 100%
                                    width 100%
                            .u-tit
                                font-size 18px
                                line-height 28px
                                margin-bottom 5px
                                .u-prove
	                                margin-left 12px
	                                height 22px
	                                font-size 12px
	                                text-align center
	                                width 60px
	                                line-height 22px
	                                _borderRadius(3px)
	                                background #fbad42
	                                color #f4f4f4
	                                _display(inline-block)
	                                vertical-align middle
	                                position relative
	                                top -2px
                            .u-tel,.u-adss
                                font-size 12px
                                line-height 18px
                                color #959595
                            .u-tel
                                span.name
                                    margin-right 5px

                        .u-mct-txt
                            margin-top 4px
                            line-height 24px
                            height 96px
                            overflow hidden
                .u-line-y
                    height 220px
                    width 1px
                    background #e2e2e2
                    _completeCenter();

        .m-process
            height 180px
            margin-top 15px
            .u-pic
                width 100%
                height 120px
                background #e2e2e2
                img
                    width 100%
                    height 100%
        .m-his-trade
            height 650px
            margin-top 25px
            .m-lst-gp-a
                width 100%
                .m-lst
                    width 1164px
                    height 435px
                    margin-left 18px
                    padding 0 0 10px 0 
                    .m-item
                        width 100%
                        height 72px
                        position relative
                        padding 10px 0
                        .m-item-box
                            width 100%
                            height 72px
                            line-height 72px
                            position relative
	                        .u-pic
                                width 115px
                                height 72px
                                position relative
                                img
                                    width 100%
                                    height 100%
                                .u-state
                                    position absolute
                                    bottom 0
                                    left 0
                                    width 100%
                                    height 24px
                                    line-height 24px
                                    font-size 12px
                                    text-align center
                                    _spacingPlus(2px)
                                    color #e5e5e5
                                    background rgba(0,0,0,.35)
                            .m-info
                                width 680px
                                height 72px
                                _verticalLayout(132px)
                                .u-vital
                                    color #ff6533
                                    margin-right 3px
                                .u-separator
                                    color #959595
                                    margin 0 5px
                            .u-price
                                width 130px
                                height 72px
                                _verticalLayout(,185px)
                                text-align right     
                                .price
                                    color #ff6533
                                    font-size 16px
                                    margin-left 3px           
                            .u-code
                                width 145px
                                height 72px
                                _verticalLayout(,0)
                                .u-lk
                                    height 36px
                                    line-height 36px
                                    width 25px
                                    _completeCenter(0,auto)
                                    color #b2b2b2
                                    .iconfont
                                        font-size 30px
                                    &:hover
                                        color $c_blue

                                .u-con
                                    width 105px
                                    margin-left 40px
                                    .u-tit
                                        line-height 24px
                                        font-size 13px
                                        &.v1
                                           margin-top 12px
                                .m-hvr-box
                                    width 120px
                                    height 120px
                                    _completeCenter(38px,auto)
                                    z-index 10
                                    _display(none)
                                    _borderRadius(3px)
                                    background #fff
                                    _borderAll($c_blue)
                                    img
                                        _completeCenter()
                                        width 114px
                                        height 114px


                        &:not(:last-child)
                            _border(bottom,#f0f0f0)



        .m-remd
            height 370px
            margin-top 25px
            .m-lst-gp-b
                height 310px
                width 1200px
                .m-lst
                    width 1220px
                    .m-item
                        float left
                        width 285px
                        height 310px
                        background #fff
                        _boxShadow(12px,rgba(0,0,0,.15))
                        margin 0 20px 0 0
                        _transitionAll(.2s)
                        &:hover
                            _transitionAll(.3s,cubic-bezier(0.04, 0.65, 0.65, 0.92))
                            _translate3d(,-4px);
                            _boxShadow(20px,rgba(0,0,0,.15),1px,10px)
                            h5.u-tit
                                font-size 16px
                        .u-pic
                            width 285px
                            height 200px
                            img 
                                width 100%
                                height 100%
                        .u-con
                            width 260px
                            position relative
                            padding 0 14px
                            h5.u-tit
                                height 28px
                                line-height 28px
                                font-size 15px
                                overflow hidden
                                font-weight normal
                                margin-top 10px
                            .u-des
                                height 22px
                                line-height 22px
                                color #959595
                            .u-price
                                margin-top 15px
                                height 22px
                                line-height 22px
                                color #ff6533
                                em
                                    font-size 20px
                                    margin-left 3px
                                    font-weight normal
                            .u-lk
                                width 85px
                                height 42px
                                background #0479cc
                                color #fff
                                text-align center
                                position absolute
                                top 48px
                                right 14px
                                _borderRadius(3px)
                                p 
                                    font-size 13px
                                    line-height 18px
                                    &.u-count
                                        margin-top 3px
                                p strong
                                    font-weight normal

        .m-box-hd
            height 60px
            line-height 60px
            position relative
            padding-left 15px
            .u-adorn
                width 4px
                height 25px
                background $c_blue
                _verticalLayout(0)
            .u-tit
                font-size 20px
                font-weight normal
                _spacingPlus()

        .m-box-hd-c
            height 60px
            line-height 60px
            .u-tit
                text-align center
                font-size 24px
                font-weight bold
                _spacingPlus(5px)

