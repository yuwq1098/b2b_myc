@import '~assets/css/mixin.styl'

.m-help-con .m-lst
    padding 25px 0 0
    .u-item
        padding 0 0 20px
        .tit
            position relative
            font-size 17px
            line-height 24px
            padding 0 0 0 26px
            color #171717
            &::before
                content "Q"
                _completeCenter(0,auto,0,auto)
                color $c_blue
        .text-box
            margin 15px 0 0 26px
            padding 11px 15px
            background #fdfdfd
            _borderAll(#ededed)
            _borderRadius(4px)
            font-size 14px
            line-height 26px
            color #777
