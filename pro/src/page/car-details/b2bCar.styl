@import '~assets/css/mixin.styl'

.bg-test
    background #e2e2e2

.g-doc
    background #fff
    .g-bd
        padding-bottom 25px
        .m-mn-hd
            height 520px
            margin 0 0 25px
            .m-mn-info
                width 510px
                height 100%
                margin-right 25px
                .m-tit
                    max-height 68px
                    line-height 34px
                    font-size 22px
                    font-weight bold
                    margin-bottom 5px
                    _spacingPlus()
                    _ellipsis(2)
                .m-pic
                    height 42px
                    line-height 42px
                    position relative
                    & >*
                        float left
                    .u-price
                        margin-right 25px
                        line-height 40px
                        color #ff6533
                        font-size 16px
                        .vital                            
                            font-size 28px
                            font-weight bold
                    .u-del
                        height 28px
                        line-height 28px
                        padding 11px 0 0
                        font-size 13px
                        color #a5a5a5
                        text-decoration line-through
                    .u-lk
                        position absolute
                        right 0
                        top 0
                        &.record i
                            font-size 20px
                            margin-right 5px
                            color #fbad42
                    .u-view
                        _completeCenter(auto,0,0,auto)
                        font-size 18px
                        color #FF6533
                        padding 0 3px 0 25px
                        .iconfont
                            width 24px
                            height 24px
                            line-height 24px
                            text-align center
                            font-size 20px
                            color #FF6533
                            _completeCenter(0,auto,10px,auto)


                .m-des
                    width 510px
                    height 170px
                    padding 15px 0
                    .m-lst-wrap
                        width @width
                        height @height
                        position relative
                        &::before,&::after
                            content ""
                            _display(block)
                            width @width
                            height 1px
                            background #e2e2e2
                            position absolute
                            left 0
                            z-index 99
                        &::before
                            top 50%
                        &::after
                            _display(none)
                            bottom 33.33%
                        .m-des-lst
                            width @width
                            height @height
                            .u-item
                                width 170px
                                height 85px
                                text-align center
                                position relative
                                float left
                                .u-tit
                                    font-size 18px
                                    line-height 32px
                                    margin 16px 0 0
                                .u-des
                                    font-size 12px
                                    line-height 18px
                                    color #a5a5a5
                                &:not(:nth-child(3n))::before
                                    content ""
                                    _display(block)
                                    width 1px
                                    height 42px
                                    background #e2e2e2
                                    position absolute
                                    _verticalLayout(,-1px)
                                    z-index 99
                .m-intro
                    width 100%
                    height 72px
                    margin 14px 0
                    background #e2e2e2
                .m-opra
                    width 100%
                    height 54px
                    position relative
                    .u-btn,.u-btn-a
                        float left
                        text-align center
                    .u-btn
                        height 42px
                        line-height 42px
                        _borderRadius(3px)
                        margin-left 20px
                        font-size 18px
                        _spacingPlus(4px)
                        padding 0 15px
                        color #FFF
                        background #ff6533
                        &:hover
                            background @background - 12%
                        &.v2
                            background #fbad42
                            &:hover
                                background @background - 12%
                        &.not
                            background #c2c2c2
                            &:hover
                                background @background
                    .u-btn-a
                        width 135px
                        height 48px
                        line-height 48px
                        margin-top 3px
                        _borderRadius(4px)
                        border 1px solid #e2e2e2
                        font-size 17px
                        color #545454
                        font-weight bold
                        _spacingPlus(1px)
                        .i-phone
                            _display(inline-block)
                            margin-right 25px
                            font-size 18px
                            height 18px
                            position relative
                            &:before
                                content ""
                                _display()
                                width 20px
                                height 25px
                                position absolute
                                left 0
                                background url("../../assets/img/i-tel-icon.png") 0 0 no-repeat
                                background-size 100% 100%
                .m-collect
                    margin-top 15px
                    height 32px
                    line-height 32px
                    .u-lk
                        margin-right 20px
                        &:hover
                            color #ff6533
                        .iconfont
                            font-size 18px
                            margin-right 4px
                            color #ff6533

        .m-car-info
            height 330px
            margin 0 0 25px
            .m-mn
                height 258px
                width 1100px
                position relative
                margin-left 50px
                .m-basic
                    width 550px
                    .u-tit
                        padding 20px 0 5px
                        height 48px
                        text-align center
                        .txt
                            line-height 38px
                            _display(inline-block)
                            font-size 18px
                            _spacingPlus(2px)
                            position relative
                            &::after
                                content ""
                                _display()
                                height 3px
                                _completeCenter(32px,32px,auto,-2px)
                                background #ff6533
                    .u-con
                        .u-list
                            width 225px
                            margin 0 25px
                            .u-item
                                height 42px
                                line-height 42px
                                span
                                    _display(inline-block)
                                .u-attr
                                    width 90px
                                    color #a5a5a5
                .m-merchant
                    width 550px
                    .m-mct-box
                        width 400px
                        height 220px
                        margin 35px auto 0
                        .m-mct-hd
                            height 90px
                            width 305px
                            padding-left 90px
                            position relative
                            .u-box
                                _display()
                                width @width
                                height @height
                                color #40474a
                            .u-icon
                                width 78px
                                height 78px
                                _completeCenter(0,auto,0,auto)
                                _borderAll(#e2e2e2)
                                _borderRadius()
                                _imgwrap()
                                img 
                                    _borderRadius()
                                    width @width - 6px
                                    height @height - 6px
                                    _completeCenter()
                            .u-tit
                                font-size 17px
                                line-height 28px
                                margin 0 0 8px
                                .name
                                    color #40474a
                                    &:hover
                                        text-decoration underline
                                .u-prove
                                    margin-left 12px
                                    height 22px
                                    font-size 12px
                                    text-align center
                                    width 60px
                                    line-height 22px
                                    _borderRadius(3px)
                                    background #fbad42
                                    color #f4f4f4
                                    _display(inline-block)
                                    vertical-align middle
                                    position relative
                                    top -2px
                            .u-tel,.u-adss
                                font-size 13px
                                line-height 22px
                                color #a5a5a5
                            .u-tel
                                span.name
                                    margin 0 7px 0 0 
                                span.onSell
                                    margin 0 0 0 7px

                            .u-attention
                                width 80px
                                text-align left
                                height 22px
                                line-height 22px
                                _completeCenter(250px,auto,32px,auto)
                                padding 0 0 0 28px
                                font-size 13px
                                color #a5a5a5
                                .iconfont
                                    height 28px
                                    line-height 28px
                                    width 28px
                                    text-align center
                                    font-size 24px
                                    _completeCenter(0,auto)
                                    color #FD4B3D

                            .u-adss
                                .tit
                                    margin 0 15px 0 0

                        .u-mct-txt
                            margin-top 4px
                            .tit
                                _display()
                                font-size 14px
                                height 22px
                                line-height 22px
                                margin 0 0 5px
                                color #545454
                                font-weight bold
                                _spacingPlus()
                            .desc
                                font-size 13px
                                line-height 24px
                                height 72px
                                _ellipsis(3)
                                color #a5a5a5
                .u-line-y
                    height 180px
                    width 1px
                    background #e2e2e2
                    _completeCenter(,,55px,auto);

        .m-process
            height 210px
            margin 0 0 25px
            .u-pic
                width 100%
                height 120px
                padding 18px 0 12px
                img
                    width 100%
                    height 100%
        .m-remd
            min-height 380px
            margin 25px 0 20px
            .m-box-hd
                margin 0 0 10px
            .m-box-hd-c
                margin 0 0 20px
            .m-lst-gp-b
                height 310px
                width 1200px
                .m-lst
                    width 1220px
                    .m-item
                        float left
                        width 285px
                        height 310px
                        background #fff
                        _boxShadow(12px,rgba(0,0,0,.15))
                        margin 0 20px 0 0
                        _transitionAll(.2s)
                        &:hover
                            _transitionAll(.3s,cubic-bezier(0.04, 0.65, 0.65, 0.92))
                            _translate3d(,-4px);
                            _boxShadow(20px,rgba(0,0,0,.15),1px,10px)
                            h5.u-tit
                                font-size 16px
                        .u-pic
                            width 285px
                            height 200px
                            img 
                                width 100%
                                height 100%
                        .u-con
                            width 260px
                            position relative
                            padding 0 14px
                            h5.u-tit
                                height 28px
                                line-height 28px
                                font-size 15px
                                overflow hidden
                                font-weight normal
                                margin-top 10px
                            .u-des
                                height 22px
                                line-height 22px
                                color #a5a5a5
                            .u-price
                                margin-top 15px
                                height 22px
                                line-height 22px
                                color #ff6533
                                em
                                    font-size 20px
                                    margin-left 3px
                                    font-weight normal
                            .u-lk
                                width 85px
                                height 42px
                                background #2e98e2
                                color #fff
                                text-align center
                                position absolute
                                top 48px
                                right 14px
                                _borderRadius(3px)
                                p 
                                    font-size 13px
                                    line-height 18px
                                    &.u-count
                                        margin-top 3px
                                p strong
                                    font-weight normal

        .m-box-hd
            height 60px
            line-height 60px
            position relative
            padding-left 15px
            .u-adorn
                width 4px
                height 21px
                background $c_blue
                _verticalLayout(0)
            .u-tit
                font-size 20px
                font-weight normal
                _spacingPlus(2)

        .m-box-hd-c
            height 60px
            line-height 60px
            text-align center
            .u-tit
                width 360px
                _display(inline-block)
                height 60px
                font-size 24px
                font-weight bold
                _spacingPlus(5px)
                position relative
                &::before,&::after
                    width 95px
                    height 1px
                    content ""
                    _display()
                    background #b2b2b2
                &::before
                    _completeCenter(0,auto,2px)
                &::after
                    _completeCenter(auto,0,2px)

