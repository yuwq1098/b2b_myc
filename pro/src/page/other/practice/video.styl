@import '~assets/css/mixin.styl'
.m-player-wrap
    width 100%
    height 100%
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 20170721
    .m-mask
        width @width
        height @height
        background rgba(0,0,0,.55)
    .m-player-box
        width 880px
        height 546px + 60px
        background #000
        _completeCenter()
        _boxShadow(15px,rgba(0,0,0,0.5),4px,2px)
        .m-hd
            height 54px
            line-height @height
            background #fff
            position relative
            .tit
                padding 0 0 0 15px
                font-size 16px
                color #333
            .u-btn
                _display()
                width 32px
                text-align center
                height 32px
                line-height @height
                _completeCenter(auto,8px)
                .iconfont
                    font-size 28px
                    color #c2c2c2
                &:hover
                    .iconfont
                        color #959595
        .m-con
            width @width
            height 450px
            padding 30px 0