@import '../../assets/css/mixin.styl'

.bg-test
    background #e2e2e2

.g-doc
    background #fff
    .g-bd
        padding-bottom 25px
        .m-sch-wrap
            width 100%
            height 42px
            padding 8px 0
            position relative
            margin-top -28px
            .m-sch
                height 40px
                width 360px
                border 1px solid #e2e2e2
                position relative
                .u-sch-ipt,.u-sch-btn
                    _display(block)
                    float left
                .u-sch-ipt
                    width 294px
                    height 40px
                    border none
                    padding 0 12px
                    font-size 15px
                .u-sch-btn
                    width 42px
                    height 42px
                    border none
                    _border(left,#e2e2e2)
                    background $c_blue
                    position absolute
                    top -1px
                    right -1px
                    i
                        font-size 24px
                        color #f4f4f4

        .m-select-filter
            margin 15px 0 25px 0
            .m-sel-gp
                height 44px
                line-height 44px
                .m-gp-tit,.m-sel-lk-box
                    float left
                .m-gp-tit
                    width 60px
                    margin-right 12px
                    text-align right
                    _display(block)
                    color #959595
                .m-sel-lk-box
                    .m-info
                        .m-lk-list,.m-other-price
                            float left
                        .m-lk-list
                            line-height 44px
                            .u-item
                                float left
                                padding 0 7px
                                height 28px
                                line-height 28px
                                margin-right 10px
                                background #ea5
                                _display(block)
                        .m-other-price
                            line-height 44px
                            height 44px
                            & >*
                                float left
                            .u-btn
                                height 32px
                                vertical-align middle


        .m-lst-gp-sel
            .m-hd
                height 60px
                line-height 60px
                .u-tit
                    height 60px
                    font-size 22px
                    font-weight normal
                    _spacingPlus(2px)
                .m-filtrate
                    width 684px
                    height 32px
                    margin-top 13px
                    .m-filter-lst
                        .u-item
                            float left
                            width 100px
                            text-align center
                            height 32px
                            line-height 32px
                            margin-left 12px
                            border 1px solid #e2e2e2
                            &.on
                                border 1px solid #0479cc
                                color #0479cc
            .m-con
                .m-gp-lst
                    height 660px
                    padding 5px 0 0px
                    width 1200px
                    .m-car-lst
                        width 1220px
                        .m-item
                            float left
                            width 285px
                            height 310px
                            background #fff
                            _boxShadow(12px,rgba(0,0,0,.15))
                            margin 20px 20px 0 0
                            .u-pic
                                width 285px
                                height 200px
                                img 
                                    width 100%
                                    height 100%
                            .u-con
                                width 260px
                                position relative
                                padding 0 14px
                                h5.u-tit
                                    height 28px
                                    line-height 28px
                                    font-size 15px
                                    overflow hidden
                                    font-weight normal
                                    margin-top 10px
                                .u-des
                                    height 22px
                                    line-height 22px
                                    color #959595
                                .u-price
                                    margin-top 15px
                                    height 22px
                                    line-height 22px
                                    color #ff6533
                                    em
                                        font-size 20px
                                        margin-left 3px
                                        font-weight normal
                                .u-lk
                                    width 85px
                                    height 42px
                                    background #0479cc
                                    color #fff
                                    text-align center
                                    position absolute
                                    top 48px
                                    right 14px
                                    _borderRadius(3px)
                                    p 
                                        font-size 13px
                                        line-height 18px
                                        &.u-count
                                            margin-top 3px
                                    p strong
                                        font-weight normal
                .m-page
                    padding 35px 0 20px
                    text-align center









