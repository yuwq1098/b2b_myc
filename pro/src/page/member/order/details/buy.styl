@import '~assets/css/mixin.styl'

.m-buy-order
    width 948px
    min-height 480px
    .m-hd
        width @width
        padding 0 0 80px
        _border(bottom,#E5E8EB)
        position relative
        .m-progress
            height 100px
            margin 0 0 20px
        .m-statusText
            .u-txt-box
                width 720px - 16px
                min-height 56px
                max-height 112px
                line-height 28px
                background #E4F4FF
                _borderAll(#2F98E2)
                margin 0 auto 20px
                padding 10px 12px
                font-size 15px
                _spacingPlus()
        .m-operate-box
            width @width - 300px
            height 32px
            _completeCenter(auto,15px,auto,15px)
            .u-btn
                _display()
                height 32px
                line-height @height
                margin 0 0 0 15px
                padding 0 15px
                float right
                background #2f98e2
                color #fff
                _borderRadius(2px)
                &:hover
                    background @background - 12%
                &.v2
                    background #ff6533
                    &:hover
                        background @background - 12%

    .m-con
        width @width
        padding 15px 0 0
        .u-part
            .u-tit
                height 32px
                position relative
                margin 0 0 10px
                .tit
                    _display(inline-block)
                    height @height
                    line-height @height - 2px
                    font-size 14px
                    text-align center
                    _spacingPlus(2px)
                    padding 0 12px
                    background #E5E8EB
                    color #4b5861
                    position relative
                    &::after
                        content ""
                        _display()
                        height 2px
                        background #53aeef
                        _completeCenter(,,auto,0)
        .m-seller-info
            width @width
            min-height 70px
            margin 0 0 15px
            _border(bottom,#E5E8EB)
            .u-con
                height 32px
                margin 0 0 10px
                .u-lst
                    height @height
                    line-height @height
                    .u-item
                        float left
                        &:not(:last-child)
                            margin 0 40px 0 0
                        .attr
                            color #959595
                            font-size 13px
                            margin 0 4px 0 0 
                        .data
                            font-size 15px
                            color $c_blue
        .m-order-info 
            width @width
            .u-con
                width @width
                .order-info
                    width @width
                    .u-line
                        width @width
                        height 28px
                        line-height @height
                        position relative
                        .attr,.data
                            _display(inline-block)
                        .attr
                            width 78px
                            height @height
                            _completeCenter(0,auto)
                            font-size 13px
                            color #959595
                        .data
                            margin 0 0 0 90px
                            font-size 15px
                            color $c_blue
                .product-info
                    width @width 
                    height 150px
                    margin 20px 0 0
                    position relative
                    .u-pic-box
                        width 200px
                        height @height
                        _completeCenter(0,auto,0,auto)
                        .u-pic
                            width @width
                            height @height
                            _overflow()
                            img
                               width @width
                               height auto
                    .info-con
                        height @height
                        width @width - 215px - 20px
                        margin 0 0 0 215px
                        .u-title
                            height 50px
                            padding 6px 0
                            margin 0 0 8px 
                            line-height 25px
                            _ellipsis(2)
                            font-size 16px
                            font-weight bold
                            _spacingPlus()
                        .u-other
                            height 28px
                            line-height @height
                            .attr
                                color #959595
                                font-size 13px
                            .data
                                margin 0 0 0 10px
                                font-size 15px
                                color $c_blue
                                _spacingPlus()
                            .cut
                                margin 0 5px
                                color #c2c2c2
                        .u-price
                            height 38px
                            line-height @height
                            width 250px
                            text-align right
                            _completeCenter(auto,10px,auto,0)
                            color #959595
                            .price
                                color #ff6533
                                .vital
                                    font-size 22px
                                    margin 0 4px 0 2px

                    