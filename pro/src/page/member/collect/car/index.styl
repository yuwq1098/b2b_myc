@import '~assets/css/mixin.styl'

// 车辆收藏过渡效果
.car-list-enter-active
    _transitionAll(.3s)
.car-list-leave-active
    _transitionAll(.4s,cubic-bezier(0.22, 0.61, 0.21, 0.92))

.car-list-enter
    _opacity(0)
    _translate3d(-4px,-20px)
.car-list-leave-active
    _opacity(0)
    _translate3d(15px,-50px)

.m-collect-wrap
    width 948px
    position relative
    .m-car-lst
        width 948px + 12px
        margin -12px 0 0 -12px
        .u-item
            width 180px - 2px
            height 245px
            margin 12px 0 0 12px
            _boxShadow(8px,rgba(0,0,0,.05),0,0)
            _borderAll(#ededed)
            _overflow()
            position relative
            float left
            .u-lk-box
                _display()
                width @width
                height @height
            .u-pic-box
                width 180px
                height 130px
                position relative
                _overflow()
                .u-mark
                    height 22px
                    line-height 22px
                    background #ff6533
                    font-size 12px
                    padding 0 10px 0 5px 
                    _spacingPlus()
                    z-index 99
                    color #f2f2f2
                    _transitionAll(.2s)
                    _borderRadius(11px,top-right)
                    _borderRadius(11px,bottom-right)
                    _completeCenter(0,auto,12px,auto)
                .u-pic
                    width @width
                    height @height
                    _overflow()
                    _imgwrap()
                    img
                        _transitionAll(.3s)
            .u-con-box
                color #40474a
                width @width
                font-size 13px
                z-index 15
                background #fff
                height 115px + 60px
                _transitionAll(.3s)
                _completeCenter(,,130px,auto)
                .u-mask
                    width 100%
                    height 70px
                    _completeCenter(0,auto,0,auto)
                    background rgba(0,0,0,.65)
                    _transitionAll(.25s)
                .u-con
                    width @width - 14px
                    padding 5px 7px
                    z-index 2
                    background #fff
                    height @height - 10px
                    _completeCenter(0,auto,0,auto)
                    .u-tit
                        line-height 20px
                        height 40px
                        margin-bottom 5px
                        _ellipsis(2)
                    .u-price,.u-merchant
                        height 18px
                        line-height 18px
                        font-size 12px
                        margin-bottom 2px
                        color #959595
                        _ellipsis()
                        .vital
                            color #ff6533
                            font-size 13px
                    .u-other
                        font-size 12px
                        color #959595
                        height 18px
                        _ellipsis()
                    .btn-wrap
                        height 32px
                        width @width - 8px
                        line-height 32px
                        padding 0 4px
                        margin 25px 0 0
                        .u-btn
                            _display()
                            width @width
                            height @height
                            line-height @height
                            text-align center
                            background #5F6A6F
                            color #e2e2e2
                            _spacingPlus(5px)
                            _borderRadius(2px)
                            font-size 13px
                            float left
                            &.tiny
                                font-size 12px
                                _spacingPlus(3px)
                            &:hover
                                background #293135

            &:hover
                _boxShadow(15px,rgba(0,0,0,.10),-4px,4px)
                _borderAll(#e2e2e2)
                .u-pic-box
                    .u-mark
                        _transitionAll(.28s,cubic-bezier(0.14, 0.46, 0.46, 1.02))
                        _translate3d(-@width,0)
                    .u-pic-01
                        img
                            _scale(1.05)
                            _transitionAll(.3s,cubic-bezier(0.43, 0.71, 0.79, 1.07))
                .u-con-box
                    _transitionAll(.3s,cubic-bezier(0.14, 0.46, 0.46, 1.02))
                    _translate3d(0,-60px)
                    .u-mask
                        _transitionAll(.3s,cubic-bezier(0.14, 0.46, 0.46, 1.02))
                        _translate3d(0,-70px)
                    .u-con
                        .u-tit
                            color #222
                        .u-tit-01
                            color $c_blue