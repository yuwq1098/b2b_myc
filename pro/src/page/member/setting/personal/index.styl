@import '~assets/css/mixin.styl'

.m-personal-wrap
    width 450px
    padding 60px 0 40px 60px 
    .m-personal-box
        position relative
        &.info
            .m-hd
                width 100%
                height 90px
                position relative
                .m-face
                    width 90px
                    height 90px
                    _borderRadius()
                    _imgwrap()
                    _completeCenter()
                    img
                        _borderRadius()
                .u-edit
                    width 80px
                    height 28px
                    line-height 28px
                    font-size 16px
                    color #2E9BE8
                    padding-left 22px
                    position relative
                    _spacingPlus()
                    _completeCenter(280px,auto,0,auto)
                    .iconfont
                        width 22px
                        height 22px
                        line-height 22px
                        font-size 20px
                        color @color
                        _completeCenter(0,auto,2px)
                    &:hover
                        color @color - 10%
            .m-info
                width 100%
                padding 20px 0
                .m-line-box
                    height 54px
                    line-height 54px
                    font-size 14px
                    .u-attr,.u-data
                        _dispaly()
                        float left
                    .u-attr
                        width 188px
                        text-align right
                        padding 0 20px 0 0
                        font-size 16px
                    .u-data
                        font-size 15px
                        color #959595
                        .u-lk
                            margin-left 25px
                            width 80px
                            padding 2px 12px 3px
                            font-size 13px
                            _spacingPlus(2px)
                            _borderRadius(1px)
                            background #2F98E2
                            color #f0f0f0
                            &:hover
                                background @background - 10%
        &.edit
            .m-hd
                width 100%
                height 90px
                position relative
                .m-face
                    width 90px
                    height 90px
                    _borderRadius()
                    _imgwrap()
                    _completeCenter()
                    img
                        _borderRadius()
            .m-info
                width 100%
                padding 20px 0
                .m-line-box
                    height 54px
                    line-height 54px
                    margin 0 50px
                    position relative
                    font-size 14px
                    .u-attr,.u-data
                        _dispaly()
                        float left
                    .u-attr
                        width 60px
                        text-align left
                        _spacingPlus(2px)
                        padding 0 10px 0 0
                        font-size 16px
                    .u-con
                        font-size 15px
                        color #959595
                    &.input
                        .u-ipt
	                        width @width
	                        height @height
	                        _completeCenter(0,auto,0,auto)
	                        border none
	                        background transparent
	                        padding-left 70px
	                        _border(bottom,#e2e2e2)
	                        font-size 15px
	                        color #959595
	                        &:focus
	                            _border(bottom,#1e8bd8)
	                            color #40474a
