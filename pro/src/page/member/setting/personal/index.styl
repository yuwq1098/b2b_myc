@import '~assets/css/mixin.styl'

.m-personal-wrap
    width 450px
    padding 60px 0 40px 60px 
    color #40474a
    .m-personal-box
        position relative
        &.info
            .m-hd
                width 100%
                height 90px
                position relative
                .m-face
                    width 90px
                    height 90px
                    _borderRadius()
                    _imgwrap()
                    _completeCenter()
                    img
                        _borderRadius()
                .u-edit
                    width 80px
                    height 28px
                    line-height 28px
                    font-size 16px
                    color #2E9BE8
                    padding-left 22px
                    position relative
                    _spacingPlus()
                    _completeCenter(280px,auto,0,auto)
                    .iconfont
                        width 22px
                        height 22px
                        line-height 22px
                        font-size 20px
                        color @color
                        _completeCenter(0,auto,2px)
                    &:hover
                        color @color - 10%
            .m-info
                width 100%
                padding 20px 0
                .m-line-box
                    height 54px
                    line-height 54px
                    font-size 14px
                    .u-attr,.u-data
                        _dispaly()
                        float left
                    .u-attr
                        width 188px
                        text-align right
                        padding 0 20px 0 0
                        font-size 16px
                    .u-data
                        font-size 15px
                        color #959595
                        .u-lk
                            margin-left 25px
                            width 80px
                            padding 2px 12px 3px
                            font-size 13px
                            _spacingPlus(2px)
                            _borderRadius(1px)
                            background #2F98E2
                            color #f0f0f0
                            &:hover
                                background @background - 10%
        &.edit
            .m-hd
                width 100%
                height 90px
                position relative
                .m-face
                    width 90px
                    height 90px
                    cursor pointer
                    _borderRadius()
                    _imgwrap()
                    _completeCenter()
                    img
                        _borderRadius()
                    .u-mask
                        _dispaly()
                        width @width
                        height @height
                        cursor pointer
                        _borderRadius()
                        _completeCenter()
                        background rgba(0,0,0,.55)
                        .iconfont
                            cursor @cursor
                            width 36px
                            height 36px
                            line-height 36px
                            text-align center
                            font-size 32px
                            color #f4f4f4
                            _completeCenter()
                .u-tips
                    color #2F98E2
                    width 120px
                    height 22px
                    line-height 22px
                    font-size 13px
                    color #2E9BE8
                    padding-left 8px
                    position relative
                    _completeCenter(280px,auto,60px,auto)

            .m-info
                width 100%
                padding 20px 0
                .m-line-box
                    height 54px
                    line-height 54px
                    margin 0 50px
                    position relative
                    font-size 14px
                    .u-attr,.u-data
                        _dispaly()
                        float left
                    .u-attr
                        width 60px
                        text-align left
                        _spacingPlus(2px)
                        padding 0 10px 0 0
                        font-size 16px
                    .u-con
                        font-size 15px
                        color #959595
                    &.input
                        .u-ipt
                            width @width
                            height @height
                            _completeCenter(0,auto,0,auto)
                            border none
                            background transparent
                            padding-left 70px
                            _border(bottom,#e2e2e2)
                            font-size 15px
                            color #959595
                            &:focus
                                _border(bottom,#1e8bd8)
                                color #40474a
                    .nickname-error
                        width 380px
                        height 28px
                        line-height 28px
                        _completeCenter(370px,auto)
                        padding 0 0 0 22px
                        _spacingPlus()
                        font-size 14px
                        .iconfont
                            width 20px
                            height 20px
                            line-height 20px
                            font-size 19px
                            color #ff6533
                            _completeCenter(0,auto,4px)
                .m-line-error
                    height 28px
                    line-height 30px
                    margin 4px 140px 8px 50px
                    background #FBEBE6
                    _borderAll(#ff6533)
                    _borderRadius(1px)
                    color #777
                    font-size 12px
                    .error-txt
                        margin-left 10px
                        position relative
                        height 30px
                        line-height 30px
                        padding-left 22px
                        _overflow()
                        .iconfont
                            width 20px
                            height 20px
                            line-height 20px
                            font-size 18px
                            color #ff6533
                            _completeCenter(0,auto)

                .m-btn-box
                    height 38px
                    margin 12px 50px 0
                    position relative
                    font-size 14px
                    .u-btn,.u-lk
                        float left
                    .u-btn
                        height 38px
                        line-height 38px
                        width 236px
                        text-align center
                        font-size 15px
                        margin 0 12px 0 0
                        _spacingPlus(6px)
                        _borderRadius(2px)
                        background #2F98E2
                        color #f0f0f0
                        &:hover
                            background @background - 10%
                    .u-lk
                        width 100px
                        text-align center
                        font-size 15px
                        height 36px
                        line-height 36px
                        _borderAll(#e2e2e2)
                        _spacingPlus(6px)
                        _borderRadius(2px)
                        color #40474a
            .m-face-box
                _completeCenter(auto,-300px,auto,80px)


