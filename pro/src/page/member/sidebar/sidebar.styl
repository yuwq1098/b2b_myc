@import '~assets/css/mixin.styl'

.m-sdb-box
    width 200px
    min-height 550px
    background #293135
    color #e2e2e2
    .m-hd
        min-height 120px
        width 100%
        _border(bottom,#40474A)
        padding 20px 0 10
        text-align center
        font-size 13px
        .u-pic
            width 68px
            height 68px
            margin 0 auto
            background rgba(255,255,255,.55)
            _borderRadius()
            position relative
            img
                width @width - 6px
                height @height - 6px
                _borderRadius()
                _completeCenter()
            .u-auth
                _display(inline-block)
                z-index 99
                background #ff6533
                color #f4f4f4
                font-size 12px
                line-height 20px
                padding 0 5px
                _spacingPlus()
                _borderRadius(5px)
                _scale(.9)
                _origin2d(0%,center)
                _completeCenter(auto,-(@width/2) - 2px,2px,auto)
        .u-info
            padding 0 12px
            _overflow()
            margin-top 10px
            line-height 22px
            .u-name
                _ellipsis()
                font-size 13px
                _spacingPlus()
            .u-tel
                _scale(.95)
                _origin2d(center,bottom)
    .m-menu
        padding 15px 0
        .m-gp-lst
            .m-gp-item
                padding 0 10px 0 25px
                _spacingPlus()
                .m-gp-hd
                    height 38px
                    line-height 38px
                    position relative
                    margin 0 -10px 0 -25px
                    padding 0 10px 0 25px
                    cursor default
                    .iconfont,.gp-tit
                        cursor default
                    .iconfont
                        _display()
                        _completeCenter(25px,auto,2px)
                        width 24px
                        height 24px
                        line-height 24px
                        font-size 20px
                        color #4AA2CA
                    .gp-tit
                        margin-left 32px
                .m-menu-lst
                    padding 2px 10px 2px 32px
                    .u-item
                        height 26px
                        line-height 26px
                        color #8C959A
                        cursor pointer
                        margin 0 0 0 -18px
                        padding 0 0 0 18px
                        position relative
                        .u-lk
                            _display()
                            width 100%
                            height 100%
                        &:hover
                            background #4E565A
                            color #4AA2CA
                        &.on
                            color #4AA2CA
                            &:before
                                content ""
                                _display()
                                width 4px
                                height 4px
                                _borderRadius()
                                background #4AA2CA
                                _completeCenter(6px,auto,1px)



