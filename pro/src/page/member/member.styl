@import '../../assets/css/mixin.styl'

.g-doc
    background #fff
    .g-bd
        .m-bd-wrap
            min-height 500px
            margin 10px 0 30px 0
            .m-bd-mn
                width 1020px
                height 880px
                background #e2e2e2
                &.fade-enter-active,&.fade-enter-active
                    _transitionAll(2s)
                &.fade-enter
                    _opacity(0)
                    _translate3d(80px)
                &.fade-leave-active
                    _opacity(0)
                    _translate3d(80px)