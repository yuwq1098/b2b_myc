@import '~assets/css/mixin.styl'

.m-gk-alerts
    width 100%
    height 100%
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 20170721
    .m-mask
        width @width
        height @height
        background rgba(0,0,0,.55)
    .m-alert-box
        width 340px - 20px
        height 385px - 20px
        padding 10px
        _completeCenter()
        background rgba(255,255,255,.35)
        .inner
            width @width
            height @height
            background #fff
            position relative
            .u-hd
                width @width
                height 42px
                position relative
                .txt
                    width @width - 42px - 12px
                    height @height
                    line-height @height
                    padding 0 42px 0 12px
                    background #58B1F7
                    color #f2f2f2
                    font-size 13px
                    .data
                        margin 0 0 0 4px  
                        .vital
                            font-size 18px

                .u-btn
                    width 28px
                    text-align center
                    height 28px
                    line-height @height
                    background #58B1F7
                    _completeCenter(auto,7px)
                    .iconfont
                        font-size 20px
                        color #f2f2f2
                    &:hover
                        background #58B1F7 - 20%

            .u-con
                height 280px
                background #fff
                position relative
                .wx-code
                    width 256px
                    height @width
                    _completeCenter()
                    _imgwrap()
                .success
                    width 160px
                    height 150px
                    _completeCenter()
                    .u-icon
                        width 120px
                        text-align center
                        height @width
                        line-height @height
                        margin 0 auto
                        .iconfont
                            font-size 108px
                            color #51EF9F
                    .txt
                        _display()
                        text-align center
                        line-height 28px
                        font-size 20px
                        _spacingPlus(4px)
                        color #34E68C
                        _translate3d(0,-5px)

            .u-other
                height 43px
                line-height 43px
                text-align center
                background #f2f2f2
                color #58B1F7


