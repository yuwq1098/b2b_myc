@import '../../assets/css/mixin.styl'

.g-doc
    background #fff
    .g-bd
        width 100%
    .m-sell-mn
        width 1120px
        margin-left 40px
        margin-bottom 20px
        .m-sell-hd
            width 100%
            height 80px
            line-height 80px
            text-align center
            margin-bottom 15px
            border 1px solid #e2e2e2
            _borderRadius(5px)
            .m-tit
                color $c_blue
                _spacingPlus()

        .m-sell-tb
            width 100%
            padding 20px 0 50px 0
            border 1px solid #e2e2e2
            _borderRadius(5px)
            .m-tb-wrap
                width 950px
                margin 0 auto
                .m-line-gp
                    height 46px
                    line-height 46px
                    .u-gp-attr,.u-gp-con
                        float left
                        _display(inline-block)
                    .u-gp-attr
                        width 110px
                        text-align right
                        color #777
                        &.vital::before
                            content "*"
                            font-size 14px
                            margin-right 2px
                            color $c_red
                    .u-gp-con
                        width 780px
                        margin-left 30px
                        height 42px
                        line-height 42px
                        .el-cascader,.el-select
                            height 36px
                            margin-top 5px
                        .el-cascader
                            width 450px
                        .el-select
                            width 400px
                        .el-input__inner
                            border 1px solid #e2e2e2
                            line-height 1.4
                            color $c_blue
                        .el-cascader__label
                            color $c_blue
                        .el-input__icon
                            color #d8dcdf
                            font-size 13px
                        .u-ipt-text
                            height 36px
                            margin-top 5px
                            border 1px solid #e2e2e2
                            line-height 1.4
                            width 340px
                            padding 0 10px
                            color $c_blue
                            _placeholder(#97a8be)
                        .u-ipt-date
                            margin-top 5px
                            width 280px
                        .el-textarea__inner
                            border 1px solid #e2e2e2
                            line-height 1.4
                            min-height 90px
                            color $c_blue
                            _placeholder(#97a8be)
                    &.v2
                        height auto
                        .u-gp-con
                            height auto
                            padding 10px 0
                    &.v3
                        min-height 100px
                        .u-gp-con
                            height auto
                            padding 5px 0
