@import '../../assets/css/mixin.styl'

.g-doc
    background #f4f4f4
    color #313536
    font-size 14px
    font-family $f_family_yh
    a:hover
        color #0479cc
    .g-bd
        width 100%
        .g-ad
            height 450px
            position relative
            .m-sld
                height @height
                .swiper-container
                    .swiper-wrapper
                        height @height
                    .swiper-pagination
                        bottom 30px
                        height 32px
                        cursor default
                        .swiper-pagination-bullet
                            width 12px
                            height 12px
                            background rgba(0,0,0,.45)
                            _opacity(1)
                            cursor pointer
                        
                        .swiper-pagination-bullet-active
                            _opacity(1)
                            background rgba(0,0,0,.6)
                            position relative
                            &::before
                                _display()
                                content ""
                                width 6px
                                height 6px 
                                background $c_white03
                                _borderRadius()
                                _completeCenter()
                                _opacity(.7)
                    
        .g-bd-ct
            width 100%
            position relative
            z-index 10000
            margin-top -30px
            .m-category
                background #fff
                height 284px
                _border(#f0f0f0,2px)
                _boxShadow(12px,rgba(0,0,0,.15))
                overflow hidden
                & .u-hd
                    height 62px
                    line-height 62px
                    text-align center
                    _spacingPlus(2px)
                    font-size 15px
                    a,a:hover
                        color #313536
                        cursor default
                .m-brand-wrap .u-hd i
                    color #313536
                    font-size 14px
                    margin-left 3px
                & .u-con
                    height 221px
                    _border(top,#e2e2e2,1px)
                & >div:not(:last-child)
                    .u-con
                        _border(right,#e2e2e2,1px)
                .m-brand-wrap
                    width 606px
                    .u-con
                        width @width - 42px
                        padding 12px 21px 7px
                        .u-lk
                            float left
                            height 95px
                            margin-bottom 5px 
                            width 94px
                            img
                                width 46px
                                height 46px
                                display block
                                margin 12px auto 6px
                            .u-tit
                                line-height 25px
                                text-align center
                .m-price-wrap
                    width 297px
                    .u-con
                        width - 20px
                        padding 25px 10px 0
                        .u-lk
                            float left
                            height 50px
                            line-height 50px
                            font-size 13px
                            text-align center
                            margin-bottom 8px 
                            width 92px
                            &.light
                                color #ff5a37

                .m-modal-wrap
                    width 297px
                    .u-con
                        width - 30px
                        padding 23px 10px 0
                        .u-lk
                            float left
                            height 82px
                            font-size 13px
                            text-align center
                            margin-bottom 8px 
                            width 92px
                            img
                                width 73px
                                height 29px
                                display block
                                margin 12px auto 6px
                            .u-tit
                                line-height 32px
                                text-align center

            .m-all-search
                width 100%
                height 140px
                position relative
                .search-box
                    width 976px
                    height 60px
                    _completeCenter()
                    .u-ipt,.u-btn
                        float left
                    .u-ipt
                        width 656px
                        height 60px
                        background #fff
                        _border(#e2e2e2,2px)
                        padding 0 15px
                        font-size 15px
                    .u-btn
                        width 140px
                        height 60px
                        line-height 60px
                        text-align center
                        background #0479cc
                        margin-left 20px
                        color #f4f4f4
                        font-size 17px
                        _spacingPlus(1px)
                        font-family $f_family
                        &:hover
                            color @color
                        &.v2
                            background #ff6533


            .m-lst-group
                height 750px
                
                .m-lst-hd
                    height 60px
                    line-height 60px
                    background #fff
                    _boxShadow(12px,rgba(0,0,0,.15))
                    h3
                        .u-tit
                            font-size 24px
                            font-weight bold
                            margin 0 0 0 15px
                        .u-sep
                            color #959595
                            margin 0 0 0 5px
                        .u-des
                            color #959595
                            margin 0 0 0 2px
                            font-weight normal
                    .u-more
                        margin-right 15px
                        .iconfont
                            position relative
                            top 1px
                            margin-left 2px
                .m-lst-con
                    padding 5px 0 25px
                    width 1200px
                    .m-lst
                        width 1220px
                        .m-item
                            float left
                            width 285px
                            height 310px
                            background #fff
                            _boxShadow(12px,rgba(0,0,0,.15))
                            margin 20px 20px 0 0
                            .u-pic
                                width 285px
                                height 200px
                                img 
                                    width 100%
                                    height 100%
                            .u-con
                                width 260px
                                position relative
                                padding 0 14px
                                h5.u-tit
                                    height 28px
                                    line-height 28px
                                    font-size 15px
                                    overflow hidden
                                    font-weight normal
                                    margin-top 10px
                                .u-des
                                    height 22px
                                    line-height 22px
                                    color #959595
                                .u-price
                                    margin-top 15px
                                    height 22px
                                    line-height 22px
                                    color #ff6533
                                    em
                                        font-size 20px
                                        margin-left 3px
                                        font-weight normal
                                .u-lk
                                    width 85px
                                    height 42px
                                    background #0479cc
                                    color #fff
                                    text-align center
                                    position absolute
                                    top 48px
                                    right 14px
                                    _borderRadius(3px)
                                    p 
                                        font-size 13px
                                        line-height 18px
                                        &.u-count
                                            margin-top 3px
                                    p strong
                                        font-weight normal
