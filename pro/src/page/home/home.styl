@import '../../assets/css/mixin.styl'

.g-doc
    background #f4f4f4
    .g-hd
        height 130px
        width 100%
        .g-hd-top
            height 40px
            line-height 40px
            background #fff
            _border(bottom,#ececec)
            .m-top-svr
                .u-item
                    float left
            .m-top-lk
                .u-item
                    float right
        .g-hd-nav
            height 90px
            position relative
            .m-logo
                width 260px
                height 90px
                img
                    _completeCenter()
            .m-nav
                width 620px
                height 90px
                line-height 90px
                right 305px
                .u-item
                    float left
                    font-size 16px
                    position relative
                    font-family $f_family_yh
                    .u-lk
                        padding 0 18px
                        line-height 90px
                        display block
                        &:hover
                            color $c_blue
                    
            .m-sch
                width 290px
                height 50px
                top 20px
                .search-form
                    height 48px
                    position relative
                    border 1px solid #e2e2e2
                    background #fff
                    padding 0 67px 0 17px
                    z-index 930 
                    input
                        height 48px
                        font-size 14px
                        color #959595
                        border 0
                        width 100%
                        outline 0
                        padding 14px 0
                        _spacingPlus()
                    button
                        width 50px
                        height 50px
                        border 1px solid #e0e0e0
                        background #fafafa
                        position absolute
                        top -1px
                        right -1px
                        cursor pointer
                


    .g-bd
        min-height 450px
        width 100%
        .g-ad
            height 450px
            background #d2d2d2
            position relative

            .m-sld
                height @height
                .swiper-wrapper
                    height @height
                    .swiper-pagination
                        width 150px
                        position absolute
                        right 0
                        left 1000px
                        bottom 0
                        margin 0 auto
                        height 32px
                        text-align right
                        cursor default
                    .swiper-pagination-bullet
                        width 12px
                        height 12px
                        background rgba(0,0,0,.30)
                        opacity 1
                        cursor pointer
                    
                    .swiper-pagination-bullet-active
                        opacity 1
                        background rgba(0,0,0,.55)
                    
            .g-ad-ct
                width 100%
                height 0
                position absolute
                top 0
                z-index 99
                margin 0 auto
                font-family $f_family_yh
                .m-sd-snav
                    width 260px
                    height 450px
                    overflow hidden
                    position relative
                    color #fff
                    .u-snav-bg,.m-snav-lst-box
                        width 100%
                        height 100%
                        _completeCenter()
                    .u-snav-bg
                        background #000
                        _completeCenter()
                        _opacity(.6)
                        z-index 1
                    .m-snav-lst-box
                        _display()
                        z-index 10
                        .m-item
                            padding: 6px 0 8px 15px;
                            line-height: 28px;
                            .tit
                                color #a8a8a8
                                font-size 14px
                            .u-lst
                                .u-item
                                    width 60px
                                    _display(inline-block)
                                    float left
                                    font-size 15px
                .m-fuc-box
                    width 260px
                    height 450px
                    .m-cards
                        .u-card
                            width 260px
                            height 224px
                            position relative
                            .u-card-bg,& >a
                                width 100%
                                height 100%
                                _completeCenter()
                            .u-card-bg
                                background #000
                                _opacity(.6)
                                z-index 1
                            & >a
                                _display()
                                z-index 10
                            &.part1
                                margin-bottom 2px   



    .g-ft
        background #313131
        color #f4f4f4
        height 536px
        width 100%
        overflow hidden