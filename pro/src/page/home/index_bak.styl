@import '~assets/css/mixin.styl'

.g-doc
    .g-bd
        width 100%
        _unUserSelect()
        .g-bd-ct
            width 100%
            position relative
            z-index 999
            .m-all-search
                width 100%
                height 110px
                position relative
                .search-box
                    width 976px
                    height 60px
                    _completeCenter()
                    .m-srh-result-box
                        width 654px
                        background #fff
                        _borderAll(#e2e2e2)
                        _borderRadius(4px)
                        _boxShadow(8px,rgba(0,0,0,.08),1px,1px)
                        position absolute
                        top 62px
                        z-index 99
                        background #fff
                    .u-ipt,.u-btn
                        float left
                    .u-ipt
                        width 656px
                        height 60px
                        background #fff
                        _borderAll(#e2e2e2)
                        padding 0 15px
                        font-size 15px
                    .u-btn
                        width 140px
                        height 60px
                        line-height 60px
                        text-align center
                        background #2e98e2
                        margin-left 20px
                        color #f4f4f4
                        font-size 17px
                        _spacingPlus(1px)
                        font-family $f_family
                        &:hover
                            color @color
                        &.v2
                            background #ff6533
            // 平台特色服务
            .m-svr-box
                width 100%
                min-height 50px
                background #fff
                _boxShadow(8px,rgba(0,0,0,.05))
                margin-bottom 25px

            // 进入b2b大厅
            .m-b2b-entrance
                // background url('../../assets/img/b2b-entrance-bg.jpg') 0 0 no-repeat
                // background-size 100% auto
                background #fff
                _boxShadow(8px,rgba(0,0,0,.05))
                margin 0 0 18px
                .m-etc-bg
                    height 360px
                    position relative
                    .m-info
                        width 480px
                        height 220px
                        _completeCenter(72px,auto)
                        .u-tit
                            font-size 48px
                            color #313536
                            height 60px
                            line-height 60px
                            margin-bottom 20px
                            .vital
                                color #f43
                                font-weight bold
                        .u-txt
                            color #777
                            font-size 15px
                            _spacingPlus()
                            text-indent 55px
                        .u-btn
                            margin-top 30px
                            background $c_blue
                            color #f4f4f4
                            font-size 32px
                            _spacingPlus(8px)
                            height 64px
                            line-height 64px
                            width 280px
                            margin-left 15px
                            text-align center
                            _display()
                            _borderRadius(6px)
                    .u-img-bg
                        width 570px
                        height 175px
                        background url('../../assets/img/b2b-entrance-img01.png') 0 0 no-repeat
                        background-size 100% auto
                        _completeCenter(auto,60px)

            // 热门好车or猜你喜欢
            .m-carlist-container
                _overflow()
                .m-lst-wrap
                    margin 0 0 25px
                    .m-lst-hd
                        height 60px
                        line-height 60px
                        margin 0 0 5px
                        h3
                            .u-tit
                                font-size 24px
                                _spacingPlus()
                                font-weight bold
                                margin 0 0 0 6px
                            .u-sep
                                color #959595
                                margin 0 0 0 5px
                            .u-des
                                color #959595
                                margin 0 0 0 2px
                                font-weight normal
                    .m-lst-con
                        min-height 270px
                        margin 0 0 25px
                        clear both
                    &.v1
                        margin 0 0 -20px
                    .m-btn-wrap
                        height 44px
                        _translate3d(0,-6px)
                        .u-btn
                            width 175px
                            height @height
                            line-height @height
                            margin 0 auto
                            background $c_blue
                            _display()
                            font-size 15px
                            _spacingPlus(4px)
                            color #f2f2f2
                            text-align center
                            _borderRadius(@height * 0.5)
                            &:hover
                                background @background - 2%
                            &:active
                                background @background + 5%

            // 交易明星
            .m-trade-star
                margin 12px 0 18px
                background-size cover
                .inner-box
                    background #6BBFEC
                    .star-dealer-bg
                        width 282px
                        height 375px
                        _completeCenter(0,auto,0,auto)
                        z-index 9
                        background url('../../assets/img/star-dealer-side.png') center center no-repeat
                        background-size cover
                    .dealer-box
                        width 914px - 20px
                        height 375px - 42px
                        float right
                        margin 21px 21px 21px 0
                        .dealer-lst
                            width 894px + 20px
                            _willAccelerate()
                            .u-item
                                background-color rgba(255,255,255,.72)
                                float left
                                _display()
                                $avatarSize_v1 = 76px
                                position relative
                                _borderRadiusCustom(2px 2px)
                                cursor pointer
                                _transitionAll(.15s,cubic-bezier(0.14, 0.46, 0.46, 1.02))
                                _transformStyle()
                                .u-box
                                    _display()
                                    width 100%
                                    height 100%
                                &.corner-tl
                                    _borderRadiusCustom(10px 1px 1px 1px)
                                &.corner-tr
                                    _borderRadiusCustom(1px 10px 1px 1px)
                                &.corner-br
                                    _borderRadiusCustom(1px 1px 10px 1px)
                                &.corner-bl
                                    _borderRadiusCustom(1px 1px 1px 10px)
                                &.v1
                                    width 288px
                                    height 101px
                                    margin 0 15px 15px 0
                                    &.last-line
                                        margin-bottom 0
                                    .u-pic
                                        width $avatarSize_v1
                                        height @width
                                        _borderRadius(2px)
                                        _completeCenter(12px,auto)
                                        _imgwrap()
                                        _boxShadow(5px,rgba(0,0,0,.18),2px,2px)
                                        _transitionAll(.15s,cubic-bezier(0.14, 0.46, 0.46, 1.02))
                                        img
                                            _borderRadius(2px)
                                    $the_ml = $avatarSize_v1 + 24px
                                    .info-con
                                        width 288px - $the_ml - 12px
                                        height $avatarSize_v1
                                        margin-left $the_ml
                                        margin-top 12px
                                        font-size 13px
                                        color #222
                                        position relative
                                        .cdg-name
                                            height 22px
                                            line-height @height
                                            font-size 16px
                                            margin-bottom 8px
                                            font-weight normal
                                            color #AC17F8
                                            _ellipsis()
                                        .owner-info,.has-credit
                                            font-size 12px
                                            color $c_blue - 35%
                                        .owner-info
                                            height 22px
                                            line-height @height
                                            margin-bottom 4px
                                            _ellipsis()
                                        .has-credit,.onsale
                                            height 20px
                                            line-height @height
                                        .onsale
                                            _completeCenter(auto,0,auto,2px)
                                            color $c_blue - 35%
                                            .vital
                                                color #AC17F8
                                                font-size 16px
                                &:hover
                                    background-color rgba(255,255,255,.88)
                                    _transitionAll(.3s,cubic-bezier(0.14, 0.46, 0.46, 1.02))
                                    _borderRadiusAll(8px)
                                    .u-pic
                                        _transitionAll(.25s,cubic-bezier(0.14, 0.46, 0.46, 1.02))