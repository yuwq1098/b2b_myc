@import '~assets/css/mixin.styl'

.focusSlide
    width 625px
    height 520px
    position relative
    _unUserSelect()
    .m-sld-wrap
        width 100%
        height 420px
        overflow hidden
        position relative
        .m-sld
            .m-sld-lst
                position absolute
                left 0
                top 0
                .u-sld-item
                    width 625px
                    height 420px
                    position relative
                    img
                        width 100%
                        height auto
                        _completeCenter()

	    .m-info-bar
	        position absolute
	        bottom 0
	        left 0
	        width 100%
	        height 32px
	        line-height 32px
	        background rgba(0,0,0,.38)
	        color #d8d8d8
	        z-index 99
	        .u-info
	            width 80%
	            padding-left 10px
	            font-size 13px
	            float left
            .u-pages
                float right
                margin-right 10px
                .i-img-thumb
                    position relative
                    padding-right 20px
                    height 19px
                    line-height 19px
                    _display(inline-block)
                    vertical-align: middle;
                    font-size 15px
                    &::before
                        content ""
                        _display()
                        width 17px
                        height 17px
                        background url(../../assets/img/i-img-thumb.png)
                        background-size 100% 100%
                        position absolute
                        top 0
                .u-page
                    _spacingPlus()

    .m-sld-cd-wrap
        width 100%
        height 88px
        margin-top 12px
        position relative
        .u-prev-cd-btn,.u-next-cd-btn
            width 36px
            text-align center
            height 88px
            line-height 88px
            background #e8e8e8
            position absolute
            _borderRadius(4px)
            top 0
            .iconfont
                font-size 20px
                color #959595
            &:hover
                background $c_blue
                .iconfont
                    color #fff
            &:active
                background $c_blue + 15%
                .iconfont
                    color #fff
        .u-prev-cd-btn
            left 0
        .u-next-cd-btn
            right 0
        .m-sld-cd
            width 541px
            height 100%
            overflow hidden
            _completeCenter()
            .m-sld-cd-lst
                position absolute
                left 0
                top 0
                .u-sld-cd-item
                    width 130px
                    height 88px
                    margin-right 7px
                    position relative
                    cursor pointer
                    overflow hidden
                    _borderRadius(2px)
                    &.on:before
                        content ""
                        z-index 2
                        _display()
                        width @width - 6px
                        height @height - 6px
                        position absolute
                        top 0
                        left 0
                        border 3px solid $c_blue
                        _borderRadius(2px)
                    img
                        width 100%
                        height auto
                        _borderRadius(4px)
                        _completeCenter()
