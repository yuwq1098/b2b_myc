@import '../../assets/css/mixin.styl'

.m-mask-bg
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background #282828
    _opacity(.6)
    z-index 1000001
.m-sign-box
    position fixed
    top 50%
    left 0
    right 0
    margin -280px auto 0
    z-index 2000001
    width 560px
    background #fff
    _borderRadius(7px)
    _overflow()
    _unUserSelect()
    .m-sign-hd
        height 60px
        _border(bottom,#e2e2e2)
        position relative
        .m-hd-tit
            width 70%
            height 60px
            line-height 60px
            padding-left 25px
            font-size 18px
            _spacingPlus(3px)
        .u-close
            _display()
            width 42px
            text-align center
            height 42px
            line-height 42px
            _verticalLayout(auto,10px)
            color #959595
            .iconfont
                font-size 28px
                _display()
                _translate3d(0,2px)
            &:hover
                color $c_blue
    .m-login-tab
        height 44px
        width 300px
        _border(bottom,#e2e2e2,2px)
        text-align center
        margin 30px auto 0
        font-size 0
        .u-tab-item
            width 150px
            line-height 44px
            font-size 15px
            float left
            _spacingPlus()
            color #959595
            &.active
                _border(bottom,$c_blue,2px)
                color $c_blue
    &.forget 
        .m-login-ipt
            padding 40px 0 50px

    .m-login-ipt
        width 380px
        margin 20px auto 0
        .m-form-gp
            .m-gp-line
                height 42px
                width @width
                position relative
                margin-bottom 15px
                .u-ipt-box
                    _borderAll(#e2e2e2)
                    _borderRadius(3px)
                    position relative
                    &.code
                        width @width - 160px
                        .u-ipt
	                        width @width - 2px
                    .u-ipt
	                    width @width - 2px
	                    height @height
	                    padding 0 20px
	                    border none
                    .u-ico
                        width 20px
                        height 20px
                        color #dedede
                        position absolute
                        right 10px
                        top 0
                        bottom 0
                        margin auto 0
                        .iconfont
                            font-size 18px
                .u-vcode
                    width 130px
                    height @height - 8px
                    position absolute
                    right 0
                    top 4px
                    img
                        width @width
                        height @height
                .m-code
                    width 145px
                    height @height + 2px
                    position absolute
                    right 0
                    top 0
                    _borderAll(#e2e2e2)
                    _borderRadius(3px)
                    background #fff

                &.m-btn-oper
                    padding-top 12px
                    margin-bottom 0
                    width @width
                    .u-btn
                        border none
                        width @width
                        height 42px
                        _borderRadius(5px)
                        color #f4f4f4
                        font-size 16px
                        _spacingPlus(8px)
                        background $c_blue
                        &:hover
                            background $c_blue + 8% - 2deg




    .m-other-oper
        width 100%
        background #f0f0f0
        height 48px
        line-height 48px
        margin-top 30px
        _border(top,#e2e2e2)
        float right
        _borderRadius(7px,bottom-right)
        _borderRadius(7px,bottom-left)
        .u-lk
            float right
            margin-right 25px
            font-size 13px
            _spacingPlus()
            color #959595
            _display(inline-block)
            &:hover
                color $c_blue


