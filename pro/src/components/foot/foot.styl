@import '../../assets/css/mixin.styl'

.g-doc
    .g-ft
        background #313536
        color #c5c5c5
        height 320px
        width 100%
        position relative
        .m-ft-bxo
            height @height
            .m-ft-ct
                width 100%
                height 240px
                position relative
                .m-lk-wrap
                    width 480px
                    height 210px
                    _verticalLayout(0,,35px)
                    .m-item
                        float left
                        width 135px
                        height 210px
                        &:not(:last-child)
                            margin-right 15px
                        .u-tit
                            font-size 16px
                            color #f4f4f4
                            font-weight bold
                            _spacingPlus(2px)
                            line-height 32px
                        dd
                            line-height 28px
                            padding-left 5px

                .m-ewm-wrap
                    width 320px
                    height 210px
                    _verticalLayout(495px,,45px)
                    .u-ewm-box
                        width 145px
                        float left
                        &.v2
                            margin-left 30px
                        img
                            width 145px
                            height 145px
                            margin 0 auto
                        p
                            width 100%
                            height 28px
                            line-height 28px
                            margin-top 4px
                            text-align center

                .m-tel-box
                    width 280px
                    height 210px
                    _verticalLayout(,0,35px)
                    .u-tit
                        font-size 16px
                        color #f4f4f4
                        font-weight bold
                        letter-spacing 2px
                        text-indent 2px
                        line-height 32px
                    .u-tel
                        font-size 25px
                        _spacingPlus()
                        color #ff6533
                        font-weight bold
                    .u-txt
                        line-height 28px
                        padding-left 5px

            .m-ft-cprt
                width 100%
                height 54px
                line-height 54px
                position absolute
                bottom 0
                p
                    text-align center
                    font-size 12px
                    _spacingPlus()