@import '../../assets/css/mixin.styl'

.m-site-svr
    height 95px
    width 100%
    background #fff
    _border(top,#e2e2e2)
    _boxShadow(3px,rgba(0,0,0,.05),0,-3px)
    .u-svr-lst
        width 1150px
        margin-left 25px
        line-height 95px
        .u-item
            float left
            width 230px
            text-align center
            _spacingPlus(1px)
            font-size 14px
            i
                font-size 17px
                margin-right 28px
                position relative
                vertical-align: middle;
                &::before
                    content ""
                    _display()
                    width 22px
                    height 22px
                    position absolute
                    top 0
                    left 0
                &.i-ser-tk::before
                    background url(../../assets/img/i-ser-tk.png) 0 0 no-repeat
                    background-size 100% 100%
                &.i-ser-yz::before
                    background url(../../assets/img/i-ser-yz.png) 0 0 no-repeat
                    background-size 100% 100%
                &.i-ser-zj::before
                    background url(../../assets/img/i-ser-zj.png) 0 0 no-repeat
                    background-size 100% 100%
                &.i-ser-bz::before
                    background url(../../assets/img/i-ser-bz.png) 0 0 no-repeat
                    background-size 100% 100%
                &.i-ser-lc::before
                    background url(../../assets/img/i-ser-lc.png) 0 0 no-repeat
                    background-size 100% 100%



