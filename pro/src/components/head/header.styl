@import '~assets/css/mixin.styl'


.g-doc
    .g-hd
        height 84px
        width 100%
        background #fff
        color #7A7F86
        _border(bottom,#e2e2e2,2px)
        // _boxShadow(5px,rgba(0,0,0,1),0,2px)
        .m-hd
            font-size 14px
            position relative
            .m-logo
                height 54px
                width 180px
                margin-top 15px
                margin-left 15px
                position relative
                a
                    height 100%
                    width 100%
                    _display(block)
                img
                    width 100%
                    height 100%
                    _completeCenter()
            .m-city
                height 48px
                line-height 48px
                margin-top 18px
                padding-left 30px
                text-align left
                .u-lk
                    .iconfont
                        margin-left 4px
                        font-size 15px
                        color #7A7F86
                        _display(inline-block)
                        _transitionAll(.05s)
                    &.on
                        color $c_blue
                        .iconfont
                            color @color
                            _rotate(-180deg)
                            _transitionAll(.1s,cubic-bezier(0.12, 0.38, 0.27, 0.55))
                            

            .m-site-lk
                .m-lk-list
                    line-height 84px
                    .u-item
                        float right
                        padding 0 20px
                        .router-link-active
                            color $c_blue
                        .u-lk
                            &:hover
                                color $c_blue
                        &.login
                            .lg
                                padding-left 0px
                                position relative
                                .i-user-lgn
                                    font-size 17px
                                    vertical-align: middle;
                                    &::before
                                        content ""
                                        _display()
                                        width 22px
                                        height 22px
                                        background url(../../assets/img/i-user-lgn.png) 0 0 no-repeat
                                        background-size 100% 100%
                                        _verticalLayout(0)
                            .u-join
                                margin 0 6px
                                color #b8b8b8