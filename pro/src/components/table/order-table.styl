@import '../../assets/css/mixin.styl'

.m-odr-tb
    width 100%
    .m-tb-hd
        background #E6F1F9
        .u-tb-th
            height 44px
            line-height 44px
            width 180px
            float left
            text-align center
            &.tal
                text-align left
            &.tac
                text-align center
            &.tar
                text-align right
            &.th1
                width 1020px - 560px - 15px
                padding-left 15px
            &.th2
                width 160px - 15px
                padding-right 15px
            &.th3
                width 240px
            &.th4
                width 160px - 15px
                padding-right 15px
    .m-tb-bd
        .m-tb-tr
            margin 10px 0 0 0
            _border(bottom,#eef1f6,2px)
        	.m-info-bar
        	    padding-left 8px
        	    height 42px
        	    line-height 42px
        	    _border(bottom,#e2e2e2)
        	    .u-info
        	        float left
        	        font-size 13px
        	        margin-right 25px
        	        color #a8a8a8
        	        &.v3
        	            margin-right 0
        	            max-width 540px
        	            _ellipsis()
        	        .vital
        	            color $c_blue
        	.m-tr-con
        	    width 100%
        	    padding 12px 0
        	    min-height 1px
        	    .m-tr-box
        	        float left
        	        &.box1
        	            width 1020px - 560px
        	            .u-car-basic
        	                width @width
        	                height 80px
        	                position relative
        	                .u-pic
        	                    width 100px
        	                    height 68px
        	                    _completeCenter(5px,auto)
        	                    _imgwrap()
        	                .u-info-box
        	                    margin-left 120px
        	                    width @width - 120px
        	                    height 70px
        	                    padding-top 5px
        	                    .u-tit
        	                        width @width - 20px
        	                        height 20px
        	                        line-height 20px
        	                        margin-bottom 8px
        	                        _ellipsis()
        	                        font-size 15px
        	                    .u-info
        	                        font-size 12px
        	                        color #a8a8a8

        	        &.box2
        	            width 160px - 15px
        	            padding-right 15px
        	            min-height 1px
        	            .m-price
        	                text-align right
        	                padding-top 8px
        	                line-height 24px
        	                .u-price
        	                    color #ff6533
        	                    font-size 14px
        	                    em
        	                        font-size 22px
        	                .u-tip
        	                    color #a8a8a8
        	                    font-size 13px


        	        &.box3
        	            width 240px
        	            padding-top 8px
        	            min-height 1px
        	            .m-state
        	                line-height 24px
        	                text-align center
        	                .u-lk
        	                    color $c_blue
        	                    margin-top 5px
        	        &.box4
        	            width 160px - 15px
        	            padding-right 15px
        	            min-height 1px
        	            .m-oper
        	                text-align right
        	                line-height 24px
        	                .u-btn
        	                    background $c_blue
        	                    color #f4f4f4
        	                    height 36px
        	                    line-height 36px
        	                    _borderRadius(5px)
        	                    _spacingPlus()
        	                    font-size 15px
        	                    _display(inline-block)
        	                    padding 0 15px
        	                    margin-bottom 8px
        	                .u-lk
        	                    margin-right 15px









